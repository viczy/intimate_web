<% provide(:title, '注册') %>
<h1>注册</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
    
      <%= f.label :name, "昵称" %>
      <%= f.text_field :name %>

      <%= f.label :password, "密码" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "确认密码" %>
      <%= f.password_field :password_confirmation %>
      <div class = "signupsubmit">
        <%= f.submit "注册", class: "btn btn-large btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
