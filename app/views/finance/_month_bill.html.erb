
<div class="contrainer">
	<h1><canvas id="chart-pie" width="600" height="600"></canvas></h1>
</div>

<% content_for :for_script do %>
	<script>
		var pieChartData = [
		{
			value: 15,
			color:"#F38630"
		},
		{
			value : 30,
			color : "#E0E4CC"
		},
		{
			value : 55,
			color : "#69D2E7"
		}			
		]

		window.onload = function(){
			var ctx = document.getElementById("chart-pie").getContext("2d");
			window.myPie = new Chart(ctx).Pie(pieChartData);
		};

	</script>
<% end %>

